<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Jobs</base>
  <class>SscApplication</class>
  <name>civicrm_o8_application</name>
  <comment>Social Services Connect Job Application</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique SSC Application ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>status_id</name>
    <title>Application for Job Status</title>
    <type>int</type>
    <length>3</length>
    <default>1</default>
    <import>true</import>
    <export>true</export>
    <pseudoconstant>
      <optionGroupName>o8_application_status</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>o8_job_id</name>
    <type>int unsigned</type>
    <import>true</import>
    <export>true</export>
    <comment>FK to SSC Job</comment>
    <required>true</required>
  </field>

  <foreignKey>
    <name>o8_job_id</name>
    <table>civicrm_o8_job</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>created_date</name>
    <type>timestamp</type>
    <title>Application Created Date</title>
    <required>true</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the application was created</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>

  </field>
  <field>
    <name>created_id</name>
    <type>int unsigned</type>
    <title>Created By Contact ID</title>
    <comment>FK to civicrm_contact, who created this application</comment>
    <html>
      <label>Created By</label>
    </html>
  </field>
  <foreignKey>
    <name>created_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>modified_date</name>
    <type>timestamp</type>
    <title>Application Created Date</title>
    <required>true</required>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Date and time the application was modified</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>

  </field>
  <field>
    <name>modified_id</name>
    <type>int unsigned</type>
    <title>Created By Contact ID</title>
    <comment>FK to civicrm_contact, who modified this application</comment>
    <html>
      <label>Created By</label>
    </html>
  </field>
  <foreignKey>
    <name>modified_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

</table>
